{
	"editor.tabSize": 4,
	"prettier.useTabs": true,
	"editor.formatOnSave": true,
	"[html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.codeActionsOnSave": {
			"source.fixAll.eslint": true
		}
	},
	"[typescript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.codeActionsOnSave": {
			"source.fixAll.eslint": true
		}
	},
	"[json][jsonc]": {
		"editor.defaultFormatter": "dbaeumer.vscode-eslint",
		"editor.codeActionsOnSave": {}
	},
	"cSpell.words": ["Parens"]
}
